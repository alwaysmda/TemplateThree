<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="BottomNavigationViewFontedFa"
            parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/font_fa_medium</item>
    </style>
    <style name="BottomNavigationViewFontedEn"
            parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/font_medium</item>
    </style>
</resources>
